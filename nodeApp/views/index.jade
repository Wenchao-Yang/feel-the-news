extends layout
block content
  p(id='description')
    | Welcome to FeelTheNews
    br
    | Please enter a URL for us to crawl and analyze.
  div(style='margin-left:40px')
    button(id='crawlBBC')
      | Crawl BBC World News
    form(action='/users/analyzeURL', id='urlInput')
      | AnalyzeURL: 
      input(type='text', name='urlQuery', placeholder='News Source URL...')
      input(type='submit', value='Submit')
  div.readSelect(style='margin-left:40px')
    | Readability Selector: 
    select(id='readDrop')
      option(data-number='0')
        | All
      option(data-number='1')
        | < 5
      option(data-number='2')
        | 5 - 10
      option(data-number='3')
        | 10 - 15
      option(data-number='4')
        | > 15
  div
    // News Table
    table(cellspacing='0', id='newsTable')
      thead
        tr
          th
            | Article
          th
            | Description
          th
            | Sentiment Score
          th
            | Readability Rating
          th
            | Read/ Unread
          th
            | Delete
      tbody(id='newsStats')
  script(src='/javascripts/demo.js')
