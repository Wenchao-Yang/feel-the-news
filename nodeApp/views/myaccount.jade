extends layout

block vars
  - var title = 'Account Settings'
block style
  link(rel='stylesheet', href='/stylesheets/signin.css')

block content

  if error
    p ERROR: #{error}
  if updateStatus
    p #{updateStatus}

  form(class="form-signin", method="post")
    h2(class="form-signin-heading")
      | Update your account information:
    input(type="hidden", name="_csrf", value=csrfToken)
    input(type="text", name="firstNameBlah", class="form-control", placeholder="First Name", required=true)
    input(type="text", name="lastNameBlah", class="form-control", placeholder="Last Name", required=true)
    input(type="password", name="oldPassword", class="form-control", placeholder="Old Password", required=true)
    input(type="password", name="newPassword", class="form-control", placeholder="New Password", required=true)

    button(class="btn btn-lg btn-primary btn-block", type="submit")
      | Update
